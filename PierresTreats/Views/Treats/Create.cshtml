@model PierresTreats.Models.Treat

<h4>Add a new treat</h4>

@using (Html.BeginForm())
{
    <div class="well">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)<br>

        @Html.Label("Select Flavor")
        @Html.DropDownList("FlavorID")<br>

        <input type="submit" value="Add new treat" class="btn" />
    </div>
}